<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76b852"
    tools:context=".activity.sabt_nam">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="700dp">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="349dp"
        android:layout_height="564dp"
        android:translationX="37dp"
        android:translationY="50dp"
        app:srcCompat="@drawable/second" />

    <EditText
        android:id="@+id/name"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:background="#f2f2f2"
        android:ems="10"
        android:gravity="right"
        android:hint="نام"
        android:inputType="textPersonName"
        android:translationX="55dp"
        android:translationY="140dp" />


    <EditText
        android:id="@+id/familyname"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:background="#f2f2f2"
        android:translationX="55dp"
        android:translationY="210dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:hint="نام خانوادگی" />


    <EditText
        android:id="@+id/email"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:background="#f2f2f2"
        android:translationX="55dp"
        android:translationY="280dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:hint="ایمیل" />
    <EditText
        android:id="@+id/user"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:background="#f2f2f2"
        android:translationX="55dp"
        android:translationY="350dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:hint="نام کاربری" />
    <EditText
        android:id="@+id/pass"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:background="#f2f2f2"
        android:translationX="55dp"
        android:translationY="420dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:hint="رمز عبور" />
    <Button
        android:id="@+id/accept"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:text="تایید"
        android:translationX="90dp"
        android:background="#43A047"
        android:translationY="490dp" />

    <TextView
        android:id="@+id/textView_"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:translationX="90dp"
        android:translationY="600dp"
        android:text="" />
</RelativeLayout>
</ScrollView>