<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ec3d5"
    tools:context=".activity.patern">


    <Spinner
        android:layout_width="368dp"
        android:layout_height="64dp"
        android:id="@+id/spin_patern"
        android:translationX="20dp"
        android:textAlignment="gravity"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#FFFAFA"
        android:translationY="170dp"
        >

    </Spinner>
    <Spinner
        android:layout_width="368dp"
        android:layout_height="64dp"
        android:id="@+id/spin_exam_b"
        android:translationX="20dp"
        android:textAlignment="gravity"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#FFFAFA"
        android:translationY="270dp"
        >

    </Spinner>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="180dp"
        android:translationY="500dp"
        android:background="#3277ba"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="مرحله بعدی" />
</RelativeLayout>